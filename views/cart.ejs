<% include partials/header %>
<% var sum = 0 %>

<div class="ui container" style= "margin-top:6em">
	<div class="text-center">
   <div class="page-header">
    <h1>CART Details</h1>
  </div>
   </div>

	
	
<table class="ui red celled table">
  <thead >
      	<tr>
          <th >Medicine Name    </th>
          <th>Price</th>
		<th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
      	<%  user.medicines.forEach(function(Medicine){ %>
        <% console.log(Medicine) %>
        </tr>
        <tr>
        <td><%= Medicine.name %></td>
		<td><%= Medicine.price %></td>
		<% sum = sum + Medicine.price %>
		<td class = "center aligned">
			<form action="/cart/<%= Medicine._id %>?_method=DELETE" method="POST" style="display: inline">
				<button  class="ui red basic button">Delete</button>
			</form>
		</td> 
		<% }) %>    

       
	</tr>
   </tbody>
   </table>

	<div class="ui center aligned container">
		<button class="ui teal basic button"><a href="/landing/user">Back</a></button>
		<p>
			Total Amount = <%= sum %>
		</p>
	</div>
  
</div>

<% include partials/footer %>